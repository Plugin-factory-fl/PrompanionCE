{
  "manifest_version": 3,
  "name": "PromptProfile™ Prompt Enhancer",
  "description": "Real-time AI prompt enhancement side panel for supported AI chat platforms.",
  "version": "1.0.1",
  "action": {
    "default_title": "PromptProfile™ Prompt Enhancer",
    "default_icon": {
      "16": "Assets/icons/icon16.png",
      "32": "Assets/icons/icon32.png",
      "48": "Assets/icons/icon48.png",
      "128": "Assets/icons/icon128.png"
    }
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "Assets/icons/icon16.png",
    "32": "Assets/icons/icon32.png",
    "48": "Assets/icons/icon48.png",
    "128": "Assets/icons/icon128.png"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "sidepanel.html",
        "styles/sidepanel.css",
        "styles/AdapterStyles.css",
        "Assets/icons/icon48.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/injector.js"],
      "run_at": "document_idle"
    },
      {
        "matches": [
          "https://sora.chatgpt.com/*",
          "https://*.sora.chatgpt.com/*"
        ],
        "js": ["Base/AdapterBase.js", "Adapters/Sora/adapter.js"],
        "run_at": "document_idle"
      },
      {
        "matches": [
          "https://chatgpt.com/*",
          "https://www.chatgpt.com/*",
          "https://chat.openai.com/*",
          "https://*.chat.openai.com/*"
        ],
        "js": ["Base/AdapterBase.js", "Adapters/ChatGPT/adapter.js"],
        "run_at": "document_idle"
      },
      {
        "matches": [
          "https://grok.com/*",
          "https://*.grok.com/*",
          "https://x.com/*",
          "https://*.x.com/*"
        ],
        "js": ["Base/AdapterBase.js", "Adapters/Grok/adapter.js"],
        "run_at": "document_idle"
      },
    {
      "matches": [
        "https://claude.ai/*",
        "https://*.claude.ai/*"
      ],
      "js": ["Base/AdapterBase.js", "Adapters/Claude/adapter.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://gemini.google.com/*",
        "https://*.gemini.google.com/*"
      ],
      "js": ["Base/AdapterBase.js", "Adapters/Gemini/adapter.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.perplexity.ai/*",
        "https://perplexity.ai/*",
        "https://*.perplexity.ai/*"
      ],
      "js": ["Base/AdapterBase.js", "Adapters/Perplexity/adapter.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://bolt.new/*",
        "https://*.bolt.new/*"
      ],
      "js": ["Base/AdapterBase.js", "Adapters/Bolt/adapter.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://chat.deepseek.com/*",
        "https://www.deepseek.com/*",
        "https://deepseek.com/*",
        "https://*.deepseek.com/*"
      ],
      "js": ["Base/AdapterBase.js", "Adapters/Deepseek/adapter.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://labs.google.com/*",
        "https://*.labs.google.com/*"
      ],
      "js": ["Base/AdapterBase.js", "Adapters/LabsGoogle/adapter.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "open-sidepanel": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "Open PromptProfile™ side panel"
    }
  }
}

